{
  "version": 2,
  "builds":  [
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  
   "rewrites": [
      { "source": "/(.*)", "destination": "/" }
    ]
  
}